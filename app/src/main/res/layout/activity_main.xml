<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262323"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="405dp"
        android:layout_height="505dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="5">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#DCFF9800"
            android:onClick="operatorClick"
            android:rotationX="0"
            android:text="+"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnSubstract"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#DCFF9800"
            android:onClick="operatorClick"
            android:rotationX="0"
            android:text="-"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#DCFF9800"
            android:onClick="operatorClick"
            android:rotationX="0"
            android:text="x"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#DCFF9800"
            android:onClick="operatorClick"
            android:rotationX="0"
            android:text="รท"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnAllClear"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#DCFF9800"
            android:onClick="clearClick"
            android:text="AC"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#DCFF9800"
            android:onClick="equalsClick"
            android:text="="
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#837C7C"
            android:textSize="34sp"
            app:icon="@drawable/img_1"
            app:iconGravity="textStart"
            app:iconSize="37sp"
            app:iconTintMode="src_atop"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#837C7C"
            android:text="%"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="7"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="8"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="9"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="4"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="5"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="6"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="1"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="2"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="0"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="decimalClick"
            android:text="."
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#494646"
            android:onClick="numberClick"
            android:text="3"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#837C7C"
            android:onClick="deleteClick"
            android:textSize="34sp"
            app:icon="@drawable/img"
            app:iconSize="45sp"
            app:iconTintMode="src_atop"
            app:layout_column="0"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/display"
        android:layout_width="413dp"
        android:layout_height="110dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>